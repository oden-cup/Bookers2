
<div class="container">
 <div class="row">

  <div class="post-edit-title">

   <h1>Editing Book</h1>

        <% if @book.errors.any? %>
         <div id="error_explanation" class="alert alert-danger">
           <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
           <ul>
             <% @book.errors.full_messages.each do |message| %>
             <li><%= message %></li>
                 <% end %>
           </ul>
         </div>
        <% end %>
      <%= form_for(@book) do |f| %>
      <p>Title</p>
      <%= f.text_field :title , class: "edit-title"%>
      <p>Body</p>
      <%= f.text_area :body , class: "edit-body"%>
   <br>
   <br>
   <%= f.submit "Update Book" %>
   <% end %>

   <p>
       <%= link_to "show", book_path %>
        |
       <%= link_to "Back", new_book_path %>
   </p>
  </div>
  </div>
 </div>
</div>