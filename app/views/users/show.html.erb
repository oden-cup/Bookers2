
<div class="container">
 <div class="row">

 	<div class="col-xs-3" style="background-color: white">
 			<div class="flash">
     <% flash.each do |key, value| %>
     <%= content_tag(:div, value, class: "#{key}") %>
     <% end %>
    </div>

 		<h2>User info</h2>
 		<%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size:"100x100" %>
        <table class="table table-hover">

 			<tbody>
 				 <tr>
 					<td>name</td>
 					<td><%= @user.name %></td>
 				 </tr>
 				 <tr>
 					<td>Introduction</td>
                    <td><%= @user.introduction %></td>
 				 </tr>
 			</tbody>
 		</table>

<%= link_to(edit_user_path(current_user.id), class:  " col-xs-12 btn btn-default") do %>
<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
<% end %>


<h1>New book</h1>

<%= form_for(@book) do |f| %>

  <p>Title</p>
  <%= f.text_field :title , class: "edit-title"%>

  <p>Body</p>
  <%= f.text_area :body, class: "edit-body"%>
  <br>
  <%= f.submit 'Create Book', class: "btn btn-primary" %>

<% end %>
</div>

<div class="col-xs-9" style="background-color: white">
     <h1>Books</h1>
 <table class="table table-hover table-inverse">

	<table class="table table-striped">
		<thead>
			<tr>
				<th><P>image</P></th>
				<th><P>title</P></th>
				<th><P>opinion</P></th>
			</tr>
		</thead>
		<tbody>
			<% @user.books.each do |book| %>

			 <tr class="new-table">
				<td><%= attachment_image_tag current_user, :profile_image, fallback: "no_image.jpg", size:"40x40" %></td>
				<td><%= link_to book.title ,book_path(book.id) %></td>
				<td><%= book.body %></td>
			 </tr>
			<% end %>
		</tbody>
	</table>
 </table>
</div>